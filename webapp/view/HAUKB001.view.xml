<mvc:View   xmlns:mvc="sap.ui.core.mvc"    
            xmlns:core="sap.ui.core"      
            xmlns="sap.m"
            xmlns:l="sap.ui.layout"
            xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	        xmlns:smartTable="sap.ui.comp.smarttable"
            xmlns:f="sap.f"
		    xmlns:fb="sap.ui.comp.filterbar"
            xmlns:svm="sap.ui.comp.smartvariants"
            controllerName="authorization.controller.HAUKB001">
    <f:DynamicPage headerExpanded="true">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="No filters active" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="No filters active" />
					</f:snappedContent>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar   id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" 
                                        filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="Personalnummer" label="Personalnummer" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  name="Personalnummer" selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/HAUKB001',
                                                            templateShareable: true
                                                        }">
											<core:ListItem key="{personalnummer}" text="{personalnummer}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Datamart" label="Datamart" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox	name="Datamart"	selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/HAUKB001',
                                                            templateShareable: true
                                                        }">
											<core:ListItem key="{datamart}" text="{datamart}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Funktion" label="Funktion" groupName="Group1" 
                                                    visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  name="Funktion"	selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/HAUKB001',
                                                            templateShareable: true
                                                        }">
											<core:ListItem key="{funktion}" text="{funktion}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<Table  sticky="ColumnHeaders,HeaderToolbar"                                         
                        id="table1" 
                        growing="true"
                        growingScrollToLoad="true"
                        growingThreshold="500"
                        inset="false"
                        items="{
                            path: '/HAUKB001',
                            parameters: {
                                $count: true                                    
                            }    
                        }"
                        fixedLayout="false">
					<columns>
                        <Column minScreenWidth="Tablet" demandPopin="true"> 
                            <Text text="{i18n>colPIPEPERID}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colDatamart}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUFKT}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUOE}" />
                        </Column>                                                                        
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUENTTYP}" />
                        </Column>  
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUENT}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUIOBJK}" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="{i18n>colAUWERTK}" />
                        </Column>
					</columns>
					<items>
						<ColumnListItem vAlign="Middle">
							<cells>
								<ObjectIdentifier text="{personalnummer}" />
                                <ObjectIdentifier text="{datamart}" />
                                <ObjectIdentifier text="{funktion}" />
                                <ObjectIdentifier text="{org_einh}" />                                            
                                <ObjectIdentifier text="{typ}" />
                                <ObjectIdentifier text="{entit}" />
                                <ObjectIdentifier text="{infoobjectkontrolle}" />                                                                                    
                                <ObjectIdentifier text="{wertkontrolle}" /> 
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>
		</f:DynamicPage>
		

