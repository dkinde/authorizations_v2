<mvc:View   xmlns:mvc="sap.ui.core.mvc"        
            xmlns="sap.m"
            xmlns:core="sap.ui.core"             
            xmlns:f="sap.f"
		    xmlns:fb="sap.ui.comp.filterbar"
            controllerName="auth.controller.HAUFW001">
    <f:DynamicPage id="dynamicPage1" >
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
                        <Title text="{i18n>table4PageTitle}"/>						
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="{i18n>expandedContent}" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="{i18n>expandedContent}" />
					</f:snappedContent>                    
                    <f:navigationActions>
                        <Button text="{i18n>navigationActionFunktion}" type="Reject"  icon="sap-icon://decline" 
                                tooltip="{i18n>navigationActionFunktion}"
                                press="onNavButtonPressed"></Button>
                    </f:navigationActions>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar   id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" 
                                        filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="funktion" label="{i18n>colAUFKT}" 
                                                    groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  id="multiFunktion" name="funktion" 
                                                        selectionChange=".onSelectionChange"
                                                        showSecondaryValues= "true"
                                                        items="{
                                                            path: '/distinctItems',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{funktion}" text="{funktion}" additionalText="{Txtlg}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="typ" label="{i18n>colAUENTTYP}" groupName="Group1" 
                                                    visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  id="multiTyp" name="typ"	
                                                        selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/distinctItems1',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{typ}" text="{typ}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
                                <fb:FilterGroupItem name="entit" label="{i18n>colAUENT}" groupName="Group1" 
                                                    visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  id="multiEntit" name="entit"	
                                                        selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/distinctItems2',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{entit}" text="{entit}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>		
                                <fb:FilterGroupItem name="wert" label="{i18n>colAUWERT}" groupName="Group1" 
                                                    visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  id="multiWert" name="wert"	
                                                        selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/distinctItems3',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{wert}" text="{wert}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>						
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
            <VBox class="sapUiSmallMargin">
                <Title  text="{i18n>table4FktTxtTitle}"/>  
                <Table  growing="true"
                        growingThreshold="4" 
                        mode="SingleSelectMaster"                  
                        id="table5"  
                        fixedLayout="false"  
                        alternateRowColors="true"     
                        sticky="ColumnHeaders,HeaderToolbar"                 
                        items="{
                            path: '/FKT_TXT'                                                                  
                        }"
                        class="sapFDynamicPageAlignContent"
					    width="auto"
                        inset="false"                        
                        selectionChange="onFunktionPress"> 
                    <headerToolbar>
                        <Toolbar>
                            <content>                                
                                <Button text="{i18n>buttonQuitSelectFkt}"
                                        press="onCleanFilter"/>                                                
                            </content>
                        </Toolbar>
                    </headerToolbar>                   
                    <columns>
                        <Column mergeDuplicates="false">
                            <Text text="{i18n>colAUFKT}" />
                        </Column>
                        <Column >
                            <Text text="{i18n>colTxtlg}" />
                        </Column>                                                                                               
                    </columns>
                    <items>
                        <ColumnListItem >
                            <cells>                               
                                <ObjectIdentifier text="{funktion}" />
                                <ObjectIdentifier text="{Txtlg}" />                                                                                                                                                                  
                            </cells>                                        
                        </ColumnListItem>
                    </items>                                
                </Table>            
                <Title  text="{i18n>table4FktWertTitle}"/> 
                <Table  growing="true"
                        growingScrollToLoad="true"
                        growingThreshold="50"
                        sticky="ColumnHeaders,HeaderToolbar" 
                        id="table1" 
                        mode="SingleSelectLeft" 
                        items="{
                            path: '/HAUFW001',
                            parameters: {
                                $count: true                                    
                            }    
                        }"
                        fixedLayout="false"
                        alternateRowColors="false"
                        class="sapFDynamicPageAlignContent"
					    width="auto"
                        inset="false">
                    <headerToolbar>
                        <Toolbar>
                            <content>
                                <Button icon="sap-icon://add" 
                                        text="{i18n>tableToolbarFunktionAdd}" 
                                        press="onOpenCreateDialog"
                                        type="Accept"/> 
                                <Button icon="sap-icon://edit" 
                                        text="{i18n>tableToolbarFunktionEdit}" 
                                        press="onOpenUpdateDialog"
                                        type="Emphasized"/> 
                                <Button icon="sap-icon://delete" 
                                        type="Reject" 
                                        text="{i18n>tableToolbarButtonDelete}" 
                                        press="onDeletePress"/>
                                <ToolbarSpacer/>                                
                                <Button id="sortUsersButton"
                                        icon="sap-icon://sort"
                                        tooltip="{i18n>sortButtonText}"
                                        press="handleSortButtonPressed"/>                                 
                                <Button id="groupButton"
                                        icon="sap-icon://group-2"
                                        tooltip="{i18n>groupButtonText}"
                                        press="handleGroupButtonPressed"/>
                                <Button icon="sap-icon://excel-attachment"
                                        tooltip="{i18n>excelButtonText}" 
                                        press="onExport"/>                                                
                            </content>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column mergeDuplicates="true">
                            <Text text="{i18n>colAUFKT}" />
                        </Column>
                        <!-- <Column mergeDuplicates="false">
                            <Text text="{i18n>colTxtlg}" />
                        </Column> -->
                        <Column mergeDuplicates="false">
                            <Text text="{i18n>colAUENTTYP}" />
                        </Column>
                        <Column mergeDuplicates="false">
                            <Text text="{i18n>colAUENT}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>colAUWERT}" />
                        </Column>                                                                       
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>                               
                                <ObjectIdentifier text="{funktion}" />
                                <!-- <ObjectIdentifier text="{Txtlg}" /> -->
                                <ObjectIdentifier text="{typ}" />
                                <ObjectIdentifier text="{entit}" />
                                <ObjectIdentifier text="{wert}" />                                                                                                                                   
                            </cells>                                        
                        </ColumnListItem>
                    </items>                                
                </Table>            
                </VBox>    
			</f:content>
		</f:DynamicPage>       
</mvc:View>