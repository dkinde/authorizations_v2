<mvc:View   xmlns:mvc="sap.ui.core.mvc"        
            xmlns="sap.m"
            xmlns:l="sap.ui.layout"
            controllerName="authorization.controller.HAUFW001">
    <Page   title="{i18n>table4PageTitle}"
            showNavButton="true"
            navButtonPress=".onNavButtonPressed"
            backgroundDesign="Solid">    
        <content>
        <l:Grid defaultSpan="L12 M12 S12" 
                class="sapUiResponsiveMargin" 
                vSpacing="0" 
                hSpacing="0">            
        <Table  growing="true"
                growingScrollToLoad="true"
                growingThreshold="200"
                sticky="ColumnHeaders,HeaderToolbar" 
                id="table1" 
                mode="SingleSelectMaster" 
                items="{
                    path: '/HAUFW001',
                    parameters: {
                        $count: true                                    
                    }    
                }">
            <headerToolbar>
                <Toolbar>
                    <content>
                        <Button icon="sap-icon://add" 
                                text="{i18n>tableToolbarFunktionAdd}" 
                                press="onOpenDialog"
                                type="Accept"/> 
                        <Button icon="sap-icon://edit" 
                                text="{i18n>tableToolbarFunktionEdit}" 
                                press="onUpdatePress"
                                type="Emphasized"/> 
                        <Button icon="sap-icon://delete" 
                                type="Reject" 
                                text="{i18n>tableToolbarButtonDelete}" 
                                press="onDeletePress"/>
                        <ToolbarSpacer/>
                        <SearchField    id="searchField"
                                        width="20%"
                                        liveChange=".onSearch"
                                        placeholder="{i18n>searchFieldPlaceholder}"/>
                        <Button id="sortUsersButton"
                                icon="sap-icon://sort"
                                tooltip="{i18n>sortButtonText}"
                                press="handleSortButtonPressed"/> 
                        <Button id="filterButton"
                                icon="sap-icon://filter"
                                tooltip="{i18n>filterButtonText}"
                                press="handleFilterButtonPressed"/>
                        <Button id="groupButton"
                                icon="sap-icon://group-2"
                                tooltip="{i18n>groupButtonText}"
                                press="handleGroupButtonPressed"/>
                        <Button icon="sap-icon://excel-attachment"
                                tooltip="{i18n>excelButtonText}" 
                                press="onExport"/>                                                
                    </content>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="{i18n>colAUFKT}" />
                </Column>
                <Column>
                    <Text text="{i18n>colAUENTTYP}" />
                </Column>
                <Column>
                    <Text text="{i18n>colAUENT}" />
                </Column>
                <Column>
                    <Text text="{i18n>colAUWERT}" />
                </Column>                                                                       
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectNumber number="{funktion}" />
                        <ObjectIdentifier text="{typ}" />
                        <ObjectIdentifier text="{entit}" />
                        <ObjectIdentifier text="{wert}" />                                                                                                                                   
                    </cells>                                        
                </ColumnListItem>
            </items>                                
        </Table>                                        
        </l:Grid>  
        </content> 
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button id="saveButton" 
                        text="Save" 
                        type="Accept" 
                        press="onSave" 
                        visible="false" />
                <Button id="cancelButton" 
                        text="Cancel" 
                        type="Reject" 
                        press="onCancel" 
                        visible="false" />
            </OverflowToolbar>
        </footer>                                               
    </Page>
</mvc:View>