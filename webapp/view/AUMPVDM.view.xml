<mvc:View
    xmlns:mvc="sap.ui.core.mvc"         
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    controllerName="authorizationsv2.controller.AUMPVDM">
    <Page
        title="{i18n>table2PageTitle}"
        showNavButton="true"
        navButtonPress=".onNavButtonPressed"
        backgroundDesign="Solid">    
        <content>
       <l:Grid defaultSpan="L12 M12 S12" class="sapUiResponsiveMargin" vSpacing="0" hSpacing="0">
                            <Table 
                                sticky="ColumnHeaders,HeaderToolbar"
                                growing="true"
                                growingScrollToLoad="true"
                                growingThreshold="30"
                                id="table1" 
                                mode="SingleSelectMaster" 
                                items="{
                                    path: '/AUMPVDM',
                                    parameters: {  $count: true     }    
                                }">
                                <headerToolbar>
                                    <Toolbar>
                                        <content>
                                            <Button 
                                                icon="sap-icon://add" 
                                                text="{i18n>tableToolbarButtonAdd}" 
                                                press="onOpenDialog"
                                                type="Accept"/>
                                            <Button 
                                                icon="sap-icon://edit"
                                                text="{i18n>tableToolbarButtonEdit}" 
                                                press="onUpdatePress"/>                                                
                                            <Button 
                                                icon="sap-icon://delete" 
                                                type="Reject" 
                                                text="{i18n>tableToolbarButtonDelete}" 
                                                press="onDeletePress"/>
                                            <ToolbarSpacer/>
                                            <SearchField											    
											    width="20%"
                                                liveChange=".onSearch"
											    placeholder="{i18n>searchFieldPlaceholder}"/>
                                            <Button                                                
                                                icon="sap-icon://sort"
                                                tooltip="{i18n>sortButtonText}"
                                                press="handleSortButtonPressed"/> 
                                            <Button                                                
                                                icon="sap-icon://filter"
                                                tooltip="{i18n>filterButtonText}"
                                                press="handleFilterButtonPressed"/>
                                            <Button                                                
                                                icon="sap-icon://group-2"
                                                tooltip="{i18n>groupButtonText}"
                                                press="handleGroupButtonPressed"/>
                                            <Button 
                                                icon="sap-icon://excel-attachment"
                                                tooltip="{i18n>excelButtonText}" 
                                                press="onExport"/>                                                
                                        </content>
                                    </Toolbar>
                                </headerToolbar>
                                <columns>
                                    <Column>
                                        <Text text="AUDMART" />
                                    </Column>
                                    <Column>
                                        <Text text="AUMPVDM" />
                                    </Column>                                                                                                                                              
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <ObjectIdentifier text="{datamart}" />
                                            <ObjectIdentifier text="{multi}" />                                                                                                                                                                                                                                                                   
                                        </cells>                                        
                                    </ColumnListItem>
                                </items>
                            </Table>                                                                
          </l:Grid>  
        </content> 
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button id="saveButton" text="Save" type="Accept" press="onSave" visible="false" />
                <Button id="cancelButton" text="Cancel" type="Reject" press="onCancel" visible="false" />
            </OverflowToolbar>
        </footer>                                               
    </Page>
</mvc:View>