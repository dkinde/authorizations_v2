<mvc:View 
    controllerName="authorization.controller.Funktion"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m" 
    xmlns:layout="sap.ui.layout">
    <Page id="page" title="{i18n>funktionPageTitle}" navButtonPress=".onNavButtonPressed" showNavButton="true">
          <Toolbar height="5rem">
            <Title titleStyle="H2" text="{i18n>funktionTitle}" class="sapUiTinyMarginBegin" id="t1"/>
            <ToolbarSpacer/>
            <Image  alt="DVZ Icon"                    
                    src="src/DVZ_icon.png"
                    useMap=""
                    height="5rem"
                    width="5rem">            
            </Image>                  
        </Toolbar> 
        <layout:VerticalLayout class="sapUiResponsiveMargin" id="layout1">            
            <layout:HorizontalLayout allowWrapping="true" id="layout2">
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" id="g1" 
                            header="{i18n>funktionGenTile1Header}"                             
                            press="onNavToHAUFW001">                   
                        <TileContent id="t2">                            
                            <NumericContent value="{
                                                path: '/HAUFW001/$count'
                                            }"                                                 
                                            indicator="None"
                                            valueColor="Neutral" 
                                            id="n1" 
                                            icon="sap-icon://menu2"/>                            
                        </TileContent>                    
                </GenericTile>
                <GenericTile    class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                                id="g2" 
                                header="{i18n>funktionGenTile2Header}"                                 
                                press="onNavToHAUPF001">                    
                        <TileContent id="t3">                            
                            <NumericContent value="{
                                                path: '/HAUPF001/$count'
                                            }"
                                            indicator="None"
                                            valueColor="Neutral" 
                                            id="n2" 
                                            icon="sap-icon://menu2"/>                            
                        </TileContent>                    
                </GenericTile>               
            </layout:HorizontalLayout>            
        </layout:VerticalLayout>        
    </Page>
</mvc:View>
