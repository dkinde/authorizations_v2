<mvc:View   controllerName="auth.controller.BasisKonfig"
            xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true"
            xmlns="sap.m" 
            xmlns:layout="sap.ui.layout">
    <Page   id="page" 
            title="{i18n>basisPageTitle}" 
            navButtonPress=".onNavButtonPressed" 
            showNavButton="true">
        <Toolbar height="5rem">
            <Title titleStyle="H2" 
                   text="{i18n>basisTitle}" 
                   class="sapUiTinyMarginBegin" 
                   id="t1"/>
            <ToolbarSpacer/>
            <Image  alt="DVZ Icon"                    
                    src="src/DVZ_icon.png"
                    useMap=""
                    height="5rem"
                    width="5rem">            
            </Image>                  
        </Toolbar> 
        <layout:VerticalLayout class="sapUiResponsiveMargin" id="layout1">            
            <layout:HorizontalLayout allowWrapping="true" id="layout2">
                <GenericTile    class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                                id="g1"                                                        
                                header="{i18n>basisGenTile1Header}"                                     
                                press="onNavToAUDMART">                    
                        <TileContent id="t2">                                                        
                                <NumericContent value=""                                                 
                                                scale="{i18n>numericScale}"
                                                id="numericCont1" 
                                                icon="sap-icon://menu2"/>                                                               
                        </TileContent>                    
                </GenericTile>                
                <GenericTile    class="sapUiTinyMarginBegin sapUiTinyMarginTop" 
                                id="g3" 
                                header="{i18n>basisGenTile3Header}"                                                                
                                press="onNavToHAUPARZL">                    
                        <TileContent id="t4">                            
                                <NumericContent value=""                                                                                                 
                                                scale="{i18n>numericScale}" 
                                                id="numericCont2" 
                                                icon="sap-icon://menu2"/>                            
                        </TileContent>                    
                </GenericTile>
            </layout:HorizontalLayout>            
        </layout:VerticalLayout>       
    </Page>
</mvc:View>
