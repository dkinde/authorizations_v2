<mvc:View   xmlns:mvc="sap.ui.core.mvc" 
            displayBlock="true"
            xmlns="sap.uxap" 
            xmlns:m="sap.m"            	        
            controllerName="auth.controller.DetailPersFKT">
	<ObjectPageLayout   id="ObjectPageLayout"
                        showTitleInHeaderContent="true"
                        alwaysShowContentHeader="false"
                        preserveHeaderStateOnScroll="false"
                        headerContentPinnable="true"
                        isChildPage="true"
                        upperCaseAnchorBar="false">
                        <headerTitle>
                            <ObjectPageDynamicHeaderTitle>
                                <actions>                                       
                                    <m:Button
                                        text="SchlieÃŸen"
                                        press="onCancelTwoColumns"
                                        icon="sap-icon://decline"
                                        type="Reject"/>
                                </actions>
                            </ObjectPageDynamicHeaderTitle>
                        </headerTitle>

                        <headerContent>
                            <!-- <m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">                                
                                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                                    <m:Label text="Main Category"/>
                                </m:VBox>
                                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                                    <m:Label text="Subcategory"/>
                                </m:VBox>
                                <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                                    <m:Label text="Price"/>
                                </m:VBox>
                            </m:FlexBox> -->
                        </headerContent>

                        <sections>
                            <ObjectPageSection title="Personal - Funktion">
                                <subSections>
                                    <ObjectPageSubSection>
                                        <blocks>                        
                                            <m:Table    id="funktionTable"
                                                        items="{
                                                            path: '/HAUFW001',
                                                            parameters: {
                                                                $count: true                                    
                                                            }    
                                                        }"    
                                                        noDataText="Diese Funktion hat keine Definition"                                                    
                                                        fixedLayout="false"
                                                        alternateRowColors="false">
                                                <m:columns>
                                                    <m:Column mergeDuplicates="true">
                                                        <m:Text text="Funktion" />
                                                    </m:Column>
                                                    <m:Column mergeDuplicates="true">
                                                        <m:Text text="Typ" />
                                                    </m:Column>
                                                    <m:Column mergeDuplicates="true">
                                                        <m:Text text="{i18n>colAUENT}" />
                                                    </m:Column>
                                                    <m:Column>
                                                        <m:Text text="{i18n>colAUWERT}" />
                                                    </m:Column>
                                                </m:columns>
                                                <m:items>
                                                    <m:ColumnListItem>
                                                        <m:cells>
                                                            <m:ObjectIdentifier title="{funktion}" text="{txt}"/>
                                                            <m:ObjectIdentifier text="{typ}" />
                                                            <m:ObjectIdentifier text="{entit}" />
                                                            <m:ObjectIdentifier text="{wert}" /> 
                                                        </m:cells>
                                                    </m:ColumnListItem>
                                                </m:items>
                                            </m:Table>                                                                                           
                                            <m:Table    id="funktionTable1"
                                                        items="{
                                                            path: '/HAUPF001',
                                                            parameters: {
                                                                $count: true                                    
                                                            }    
                                                        }"                                                        
                                                        fixedLayout="false"
                                                        noDataText="Hat keine Zuordnung" 
                                                        alternateRowColors="false">
                                                <m:columns>                                                    
                                                    <m:Column>
                                                        <m:Text text="{i18n>colPIPEPERID}" />
                                                    </m:Column>
                                                    <m:Column mergeDuplicates="true">
                                                        <m:Text text="{i18n>colAUFKT}" />
                                                    </m:Column>                                                    
                                                </m:columns>
                                                <m:items>
                                                    <m:ColumnListItem>
                                                        <m:cells>
                                                            <m:ObjectIdentifier title="{personalnummer}" text="{txt_pers}" />
                                                            <m:ObjectIdentifier title="{funktion}" text="{txt_fkt}"/>                                                            
                                                        </m:cells>
                                                    </m:ColumnListItem>
                                                </m:items>
                                            </m:Table>
                                        </blocks>
                                    </ObjectPageSubSection>
                                </subSections>
                            </ObjectPageSection>
                        </sections>
	</ObjectPageLayout>
</mvc:View>


