<mvc:View   xmlns:mvc="sap.ui.core.mvc"    
            xmlns="sap.m"
            xmlns:l="sap.ui.layout"
            controllerName="authorization.controller.HAUPF001">
    <Page   title="{i18n>table5PageTitle}"
            showNavButton="true"
            navButtonPress=".onNavButtonPressed"
            backgroundDesign="Solid">    
        <headerContent>
            <!-- <Button ></Button> -->
            <Button icon="sap-icon://action" tooltip="Share" />
        </headerContent>
        <subHeader>
			<OverflowToolbar>
				<SearchField />
			</OverflowToolbar>
		</subHeader>
        <content>
        <l:Grid defaultSpan="L12 M12 S12" 
                class="sapUiResponsiveMargin" 
                vSpacing="0" 
                hSpacing="0">            
            <Table  sticky="ColumnHeaders,HeaderToolbar"
                    growing="true"
                    growingScrollToLoad="true"
                    growingThreshold="100" 
                    id="table1" 
                    mode="SingleSelectMaster" 
                    items="{
                        path: '/HAUPF001',
                        parameters: {
                            $count: true                                    
                        }    
                    }">
                <headerToolbar>
                    <Toolbar>
                        <content>                            
                            <Button icon="sap-icon://add" 
                                    text="{i18n>tableToolbarButtonAdd}" 
                                    press="onOpenDialog"
                                    type="Accept"/>                                                                           
                            <Button icon="sap-icon://delete" 
                                    type="Reject" 
                                    text="{i18n>tableToolbarButtonDelete}" 
                                    press="onDeletePress"/>
                            <ToolbarSpacer/>
                            <SearchField    id="searchField"
                                            width="20%"
                                            liveChange=".onSearch"
                                            placeholder="{i18n>searchFieldPlaceholder}"/>
                            <Button id="sortUsersButton"
                                    icon="sap-icon://sort"
                                    tooltip="{i18n>sortButtonText}"
                                    press="handleSortButtonPressed"/> 
                            <Button id="filterButton"
                                    icon="sap-icon://filter"
                                    tooltip="{i18n>filterButtonText}"
                                    press="handleFilterButtonPressed"/>
                            <Button id="groupButton"
                                    icon="sap-icon://group-2"
                                    tooltip="{i18n>groupButtonText}"
                                    press="handleGroupButtonPressed"/>
                            <Button icon="sap-icon://excel-attachment"
                                    tooltip="{i18n>excelButtonText}" 
                                    press="onExport"/>  
                            <Label text="{i18n>colPIPEPERID}"></Label>   
                            <Input id="inputPersonalnummer">
                                <layoutData>
                                    <l:GridData span="L1 M1 S1"></l:GridData>
                                </layoutData>
                            </Input>       
                            <Label text="{i18n>colAUFKT}"></Label>   
                            <Input id="inputFunktion">
                                <layoutData>
                                    <l:GridData span="L1 M1 S1"></l:GridData>
                                </layoutData>
                            </Input>                                      
                        </content>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>colPIPEPERID}" />
                    </Column>
                    <Column>
                        <Text text="{i18n>colAUFKT}" />
                    </Column>                                                                      
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>                                                                                        
                            <ObjectIdentifier text="{personalnummer}" />
                            <ObjectIdentifier text="{funktion}" />                                                                                       
                        </cells>                                        
                    </ColumnListItem>
                </items>
            </Table>                                        
            </l:Grid>  
        </content> 
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button id="saveButton" 
                        text="Save" 
                        type="Accept" 
                        press="onSave" 
                        visible="false" />
                <Button id="cancelButton" 
                        text="Cancel" 
                        type="Reject" 
                        press="onCancel" 
                        visible="false" />
            </OverflowToolbar>
        </footer>                                               
    </Page>
</mvc:View>