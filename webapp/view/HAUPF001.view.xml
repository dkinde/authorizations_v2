<mvc:View   xmlns:mvc="sap.ui.core.mvc"   
            xmlns:core="sap.ui.core"  
            xmlns="sap.m"
            xmlns:l="sap.ui.layout"
            xmlns:f="sap.f"
		    xmlns:fb="sap.ui.comp.filterbar"
            controllerName="auth.controller.HAUPF001">

    <f:DynamicPage id="dynamicPage1" headerExpanded="true" busy="true">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
                        <Title text="{i18n>table5PageTitle}"/>
						<!-- <svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" /> -->
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="No filters active" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="No filters active" />
					</f:snappedContent>
                    <f:actions>
                        <Button text="Schließen" type="Reject" icon="sap-icon://decline" press="onNavButtonPressed"></Button>
                    </f:actions>
                    <f:navigationActions>
                        <Button text="zur Menü-Sondernfunktion" icon="sap-icon://decline" press="onNavButtonPressed"></Button>
                    </f:navigationActions>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar   id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" 
                                        filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem id="filterPersonal" name="personalnummer" label="{i18n>colPIPEPERID}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox  id="multiPersonal" name="personalnummer" selectionChange=".onSelectionChange"
                                                        showSecondaryValues= "true"
                                                        items="{
                                                            path: '/distinctItems',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{personalnummer}" text="{personalnummer}" additionalText="{txt}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="funktion" label="{i18n>colAUFKT}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox	id="multiFunktion" name="funktion"	selectionChange=".onSelectionChange"
                                                        items="{
                                                            path: '/distinctItems1',
												            templateShareable: true
                                                        }">
											<core:ListItem key="{funktion}" text="{funktion}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>								
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<Table  sticky="ColumnHeaders,HeaderToolbar"
                        growing="true"
                        growingScrollToLoad="true"
                        growingThreshold="100" 
                        id="table1" 
                        mode="SingleSelectLeft" 
                        items="{
                            path: '/HAUPF001',
                            parameters: {
                                $count: true                                    
                            }    
                        }"
                        fixedLayout="false"
                        alternateRowColors="true"
                        class="sapFDynamicPageAlignContent"
					    width="auto"
                        inset="false">
                    <headerToolbar>
                        <Toolbar>
                            <content>                            
                                <Button icon="sap-icon://add" 
                                        text="{i18n>tableToolbarButtonAdd}" 
                                        press="onOpenDialog"
                                        type="Accept"/>                                                                           
                                <Button icon="sap-icon://delete" 
                                        type="Reject" 
                                        text="{i18n>tableToolbarButtonDelete}" 
                                        press="onDeletePress"/>
                                <ToolbarSpacer/> 
                                <!-- <SearchField    id="searchField"
                                                width="20%"
                                                liveChange=".onSearch1"
                                                placeholder="{i18n>searchFieldPlaceholder}"/>  -->                           
                                <Button id="sortUsersButton"
                                        icon="sap-icon://sort"
                                        tooltip="{i18n>sortButtonText}"
                                        press="handleSortButtonPressed"/> 
                                <!-- <Button id="filterButton"
                                        icon="sap-icon://filter"
                                        tooltip="{i18n>filterButtonText}"
                                        press="handleFilterButtonPressed"/> -->
                                <Button id="groupButton"
                                        icon="sap-icon://group-2"
                                        tooltip="{i18n>groupButtonText}"
                                        press="handleGroupButtonPressed"/>
                                <Button icon="sap-icon://excel-attachment"
                                        tooltip="{i18n>excelButtonText}" 
                                        press="onExport"/>                                                                     
                            </content>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column mergeDuplicates="false">
                            <Text text="{i18n>colPIPEPERID}" />
                        </Column>
                        <Column>
                            <Text text="{i18n>colAUFKT}" />
                        </Column>                                                                      
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press="onListItemPress" >
                            <cells>                                                
                                <ObjectIdentifier title="{personalnummer}" text="{txt}" tooltip="zur Definition der Funktion" />
                                <ObjectIdentifier text="{funktion}" tooltip="zur Definition der Funktion"/>                                                                                       
                            </cells>                                        
                        </ColumnListItem>
                    </items>
                </Table>
			</f:content>
		</f:DynamicPage>


