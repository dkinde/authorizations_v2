<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"    						 						 				 
                         width="100%">			
		<SelectDialog	id="selectDialogFunktion"
						noDataText="{i18n>noDataTextFunktion}"
						title="{i18n>selectDialogTitleFunktion}"
						searchPlaceholder="{i18n>searchPlaceholderFunktion}"
						search=".onSearchFunktion"
						confirm=".multiInputFunktionTokenUpdate"
						cancel=".onValueHelpDialogClose"
						contentWidth="300px"						
						growingThreshold="20"						
						multiSelect="true"
						showClearButton="true"												
						items="{
							path: '/FKT_TXT',
							sorter: {
								path: 'funktion',
								descending: false
							}
						}">
			<StandardListItem							
							title="{funktion}"
							description="{Txtlg}"							
							iconDensityAware="false"
							iconInset="false"
							type="Active" />
		</SelectDialog>			
</core:FragmentDefinition>