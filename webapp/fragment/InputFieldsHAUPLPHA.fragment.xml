<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">                         
    <Dialog title="{i18n>inputFieldDialogTitleAssig}" id="dialog1" contentWidth="650px" contentHeight="500px">
		<content>					
			<Table  id="table2" mode="SingleSelectMaster" fixedLayout="false">
							<headerToolbar>
								<Toolbar>
									<content>
										<Button id="addButton2"
												enabled="false"
												icon="sap-icon://add" 
												text="{i18n>tableToolbarButtonAdd}" 
												press="onAddPress2" 
												type="Accept"/>                                                                                               
										<Button id="deleteButton2"
												enabled="false"
												icon="sap-icon://delete" 
												type="Reject" 
												text="{i18n>tableToolbarButtonDelete}" 
												press="onDeletePress2"/>                                                                                            
									</content>
								</Toolbar>
							</headerToolbar>
							<columns>								
								<Column>
									<Text text="{i18n>colCOPLAPHA}" />
								</Column>                                                                      
								<Column>
									<Text text="{i18n>colPIPEPERID}" />
								</Column>                                                                       
							</columns>
							<items>
								<ColumnListItem>
									<cells>										
										<MultiComboBox 	id="selectphase1"
														width="250px"
														showSecondaryValues= "true"
														showSelectAll="true"
														selectionChange="createValidation"
														selectionFinish="handleSelectionFinish"	
														required="true"
														placeholder="{i18n>inputFieldDialogPlaceholderPhase}"																																
														items="{
															path: '/distinctItems1'
														}">
											<core:ListItem key="{pla_pha}" text="{pla_pha}" additionalText="{txt_pha}"/>
										</MultiComboBox>										                                                                                                                                   
										<MultiInput id="multiInputPers"													
													autocomplete="false"
													type="Number"
													valueHelpRequest=".onValueHelpRequest"													
													liveChange="createValidation"
													tokenUpdate="multiInputPersTokenUpdate"
													placeholder="{i18n>inputFieldDialogPlaceholderPersonal}"
													showClearIcon="true"
													showSuggestion="true"
													suggest="suggestPersonalnummer"
													suggestionItems="{
														path: '/PIPEPERID',
														sorter: { path: 'personalnummer' }														
													}">
													<core:ListItem key="{personalnummer}" text="{personalnummer}" additionalText="{Txtmd}"/>
										</MultiInput>
									</cells>                                        
								</ColumnListItem>
							</items>                                
						</Table>			
		</content>
		<beginButton>
			<Button id="createButton" 
					text="{i18n>inputFieldDialogBeginButtonAssig}" 
					type="Accept"  
					press=".onCreatePress" 
					enabled="false" />
		</beginButton>
		<endButton>
			<Button text="{i18n>inputFieldDialogEndButton}"  
					type="Reject" 
					press=".onCloseViewDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>