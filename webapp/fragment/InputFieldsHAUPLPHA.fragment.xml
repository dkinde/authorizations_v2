<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"                          
                         xmlns:html="http://www.w3.org/1999/xhtml"                          
						 xmlns:form="sap.ui.layout.form" 
                         width="100%">
    <Dialog title="{i18n>inputFieldDialogTitle}" id="dialog1">
		<content>
			<form:SimpleForm				
				editable="true">
				<form:content>
					<Label text="{i18n>colPIPEPERID}" required="true"/>                    
					<Select id="selectpersonalnummer"
                        	forceSelection="false"							
							change="createValidation"
                            items="{
                                path: '/PIPEPERID',
                                sorter: { 
                                    path: 'personalnummer' 
                                }
                            }">
                        <core:Item  key="{personalnummer}" 
						            text="{personalnummer}" />
                    </Select>
                    <Label text="{i18n>colCOPLAPHA}" required="true"/>
					<Select id="selectphase"					
							change="createValidation"
                        	forceSelection="false"
                            items="{
                                path: '/distinctItems1'                                
                            }">
                        <core:Item  key="{pla_pha}" 
						            text="{pla_pha}" />
                    </Select>                    
				</form:content>							
			</form:SimpleForm>			
		</content>
		<beginButton>
			<Button id="createButton" 
					text="{i18n>inputFieldDialogBeginButton}" 
					type="Accept"  
					press=".onCreatePress" 
					visible="false" />
		</beginButton>
		<endButton>
			<Button text="{i18n>inputFieldDialogEndButton}"  
					type="Reject" 
					press=".onCloseViewDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>