<core:FragmentDefinition xmlns="sap.m" 
                         xmlns:core="sap.ui.core"                                                   
						 xmlns:form="sap.ui.layout.form" 
						 xmlns:l="sap.ui.layout"
                         width="100%">
    <Dialog title="Sonderfunktion vollständig entfernen " id="dialog3" busy="false" 
			contentHeight="700px" contentWidth="750px" resizable="true">
		<content>			
			<VBox   class="sapUiSmallMargin">
				<Title  text="Ausgewähltes Element"/>
				<form:SimpleForm id="form1" editable="false" width="600px" >
					<form:content>						
						<Label text="{i18n>colAUFKT}" id="text9" required="true"/>					
						<Text  id="__textFunktion"  />
						<Label 	text="{i18n>colAUENTTYP}"  id="text10" required="true"/>
						<Text 	id="__textTyp"  text=""/>						
						<Label 	text="{i18n>colAUENT}"  id="text11" required="true"/>	
						<Text 	id="__textEntit" text=""/>										
						<Label 	text="{i18n>colAUWERT}" id="text12" required="true"/>
						<Text 	id="__textWert" text=""/>																		
					</form:content>							
				</form:SimpleForm>					
					<Title  text="zugewiesene Personalnummer"/>
						<Table  id="table3"                         		
								headerText="zugewiesene Personalnummer"
								items="{/HAUPF001}"   
								noDataText="Dieser Funktion hat keine Personalnummer zugeordnet"
								fixedLayout="true">
							<headerToolbar>
								<Toolbar>
									<content>
										<MessageStrip
											text="Wenn Sie die gesamte Funktion löschen, werden alle zugeordneten Personalnummern gelöscht"
											type="Warning"
											showIcon="true"
											showCloseButton="false">
										</MessageStrip>										                                                                                          
									</content>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column mergeDuplicates="true">
									<Text text="{i18n>colAUFKT}" />
								</Column>								
								<Column>
									<Text text="{i18n>colPIPEPERID}" />
								</Column>                                                                       
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier title="{funktion}" /> 
										<ObjectIdentifier title="{personalnummer}" text="{txt}" />                                        																			                                                                                                                                   
									</cells>                                        
								</ColumnListItem>
							</items>                                
						</Table>					
					</VBox>						
		</content>
		<beginButton>
			<Button id="createButton" 
					text="Sonderfunktion Löschen" 
					type="Reject"  
					icon="sap-icon://delete" 
					press=".onDeleteAllPress" />
		</beginButton>
		<endButton>
			<Button text="{i18n>inputFieldDialogEndButton}"  
					type="Default" 
					icon="sap-icon://decline" 
					press=".onCloseDeleteDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>